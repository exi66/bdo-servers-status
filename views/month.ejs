<%- contentFor('body') %>
<main class="container mt-3">
  <div class="row">
    <div class="col-12 mb-3">
      <div class="row">
        <div class="col-12 col-lg-auto my-1">
          <div class="row">
            <div class="col-12">
              <a class="btn btn-outline-light d-grid" href="/" role="button"><span class="d-inline">Главная <i class="bi bi-house"></i></span></a>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-auto my-1">
          <div class="row">
            <div class="col-6">
              <div class="btn-group" role="group">
                <input id="pick_date" class="btn btn-outline-light" type="month">
                <button id="navigate_to_date" type="button" class="btn btn-outline-light"><i class="bi bi-caret-right-fill"></i></button>
              </div>
            </div>
            <div class="col-auto ms-auto">
              <a class="btn btn-outline-light" href="<%-large_image-%>" role="button"><span class="d-none d-md-inline">Изображение </span><i class="bi bi-image"></i></a>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-auto mx-auto mx-lg-0 ms-lg-auto my-1">  
          <select class="form-select bg-dark text-white" id="select_data">
            <option value="auth" selected>Авторизация</option>
            <option value="market">Аукцион</option>
            <option value="k1">Кальфеон-1</option>
            <option value="v1">Валенсия-1</option>
            <option value="m1">Медия-1</option>
            <option value="kam1">Камасильвия-1</option>
          </select>
        </div>
        <div class="col-12">
          <canvas id="chart"></canvas>
        </div>
      </div>
    </div>
  </div>
</main>
<script>
document.addEventListener("DOMContentLoaded",(function(t){let e=window.location.pathname.toString().split("/");var a=`/chart/${e[2]}/${e[3]}/index.json`,n=`${e[2]}-${("0"+e[3]).slice(-2)}`,i=createMonthChart("chart"),o=getDatasets(a),r=getData("/api/stats"),c=$("#select_data").find(":selected").val();if(!r||!o)return;r.sort((function(t,e){let a=new Date(t).getTime(),n=new Date(e).getTime();return a<n?-1:a>n?1:0}));let l=r[0].split("-"),s=r.slice(-1).toString().split("-");function d(){if(!o||!i)return;let t=o.find((t=>t.name==c));return t?updateData(i,t):console.error("This type of datasets not allowed!")}$("#pick_date").attr("min",`${l[0]}-${l[1]}`),$("#pick_date").attr("max",`${s[0]}-${s[1]}`),$("#pick_date").attr("value",n),$("#navigate_to_date").click((function(){let t=$("#pick_date").val();if(t){let e=new Date(t+"-01");confirm(`Вы хотите посмотреть подробную статистику за ${t.split("-")[1]} месяц ${t.split("-")[0]} года?`)&&(window.location.href=`/stats/${e.getFullYear()}/${e.getMonth()+1}`)}})),i.canvas.onclick=function(t){var e=i.getElementsAtEventForMode(t,"nearest",{intersect:!0},!0);if(e[0]){const t=e[0].datasetIndex,a=e[0].index,n=i.data.datasets[t].data[a];confirm(`Вы хотите посмотреть подробную статистику от ${n.x.toLocaleDateString("ru-RU")}?`)&&(window.location.href=`/stats/${n.x.getFullYear()}/${n.x.getMonth()+1}/${n.x.getDate()}`)}},d(),$("#select_data").on("change",(function(t){c=this.value,d()}))}));
</script>
<%- contentFor('meta') %>
<meta property="og:title" content="Статистика за месяц">
<meta property="og:description" content="Сервис по отслеживанию доступности серверов BDO RU. Подробная статистика за день/месяц.">
<meta property="og:type" content="website">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image:src" content="<%- large_image+'?_='+new Date().getTime() -%>">

<meta property="og:image" content="/favicon.png">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="128">
<meta property="og:image:height" content="128">
