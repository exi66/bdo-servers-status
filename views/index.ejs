<%- contentFor('body') %>
<main class="container mt-3">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-12">
          <div id="about" class="text-center row justify-content-center">
            <div class="col-auto mb-3">
              <h1 class="text-white mb-0 text-uppercase">BDO Servers Status</h1>
              <small>Сервис по остлеживанию доступности игровых серверов.</small>
              <hr class="text-muted my-3">
              <div class="row justify-content-center">
                <div class="col-6">
                  <a class="btn btn-outline-light d-grid" href="/day" role="button">По дням</a>
                </div>
                <div class="col-6">
                  <a class="btn btn-outline-light d-grid" href="/month" role="button">По месяцам</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-4 my-auto">
          <div class="row">
          <% let groups = servers.map((e) => e.group);
          groups = groups.filter(function (item, pos) {
            return groups.indexOf(item) == pos;
          });
          groups = groups.map((e) => ({
            label: e,
            nodes: servers.filter((__e) => __e.group === e),
          })); 
          for(let group of groups) { %>
            <div class="col-12">
              <h4 class="text-white mt-3"><%=group.label-%></h4>
            </div>
            <% for(let serv of group.nodes) { %>
              <div class="col-12">
              <%=serv.label-%>: <span class="badge bg-secondary" id="<%= serv.name %>_status">ожидание...</span>
            </div>
            <% } %>
          <% } %>
          </div>
        </div>
        <hr class="text-muted d-md-none my-3">
        <div class="col-12 col-md-8 mb-3">
          <div class="row">
            <div class="col-auto ms-auto">
              <select class="form-select form-select-sm bg-dark text-white" id="select_data">
                <% for(let i = 0; i < servers.length; i++) { %>
                <option value="<%=servers[i].name-%>" <%=i === 0? 'selected':''-%>><%=servers[i].label-%></option>
                <% } %>
              </select>
            </div>
            <div class="col-12">
              <canvas id="chart"></canvas>
            </div>
          </div>
        </div>
        <hr class="text-muted">
        <div class="col-12 p-0" id="news"></div>
        <div class="col-12 mb-3">
          <div class="row">
            <div class="col mx-start">
              <a href="https://github.com/exi66/bdo-servers-status" style="text-decoration: none;">
                <svg aria-hidden="true" height="24" viewBox="0 0 16 16" version="1.1" width="24"
                  data-view-component="true" style="fill: #6c757d">
                  <path fill-rule="evenodd"
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z">
                  </path>
                </svg>
                <small class="text-muted">by exi66</small>
              </a>
            </div>
            <div class="col mx-end text-end">
              <small id="update_time" class="text-muted"></small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<script>
const timeout=1e4;document.addEventListener("DOMContentLoaded",(async function(){var t=createDayChart("chart"),e=await i(),a=await o(),n=this.getElementById("select_data").value;setInterval((async function(){e=await i(),a=await o(),u(),s()}),1e4);function s(){if(!e||!t)return;let a=e.find((t=>t.name==n));return a?updateData(t,a):console.error("This type of datasets not allowed!")}async function i(){let t=new Date;return await getDatasets(`/chart/${t.getFullYear()}/${t.getMonth()+1}/${t.getDate()}`)}async function o(){let t=await getData("/api/status");if(!t)return;let a=e.map((t=>({name:t.name})));for(let e of a)e.value=t[e.name];return{status:a,time:t.time}}function u(){if(a.status||a.time){document.getElementById("update_time").textContent=new Date(a.time).toLocaleString();for(let t of a.status){let e=document.getElementById(`${t.name}_status`);e.classList.remove(["bg-secondary","bg-danger","bg-success","bg-warning"]),e.classList.add(-1===t.value?"bg-danger":t.value>100?"bg-warning":"bg-success"),e.textContent=-1===t.value?"down":t.value.toFixed(2)+"ms"}}}u(),s(),this.getElementById("select_data").addEventListener("change",(function(){n=this.value,s()}))}));
</script>
