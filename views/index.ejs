        </div>
      </div>
    </div>
  </div>
</main>
<script>
const timeout=1e4;function updChart(e,t){let a=new Date;updateChart(`/chart/${a.getFullYear()}/${a.getMonth()+1}/${a.getDate()}.json`,t,e)}function updateNews(){var e=getData("/api/news");if(e.error)return console.error(e.error);$("#news").empty();for(let t=0;t<Math.min(3,e.length);t++){let a=e[t].text.split(" ").slice(1,-1).join(" "),n=e[t].text.split(" ").slice(-1).toString();$("#news").append($("<a/>").addClass("row link-unstyled mx-3").attr("href",e[t].url).append($("<div/>").addClass("col-2 my-auto p-0").append($("<img/>").attr("src",e[t].img).addClass("img-fluid"))).append($("<div/>").addClass("col mx-auto my-auto").html(a)).append($("<div/>").addClass("col-2 text-end my-auto d-none d-lg-block").text(n.split("/").join(".")))).append($("<hr>").addClass("text-muted"))}}function updateStatus(){var e=[{name:"market",elem:$("#market_status")},{name:"auth",elem:$("#auth_status")},{name:"k1",elem:$("#k1_status")},{name:"v1",elem:$("#v1_status")},{name:"m1",elem:$("#m1_status")},{name:"kam1",elem:$("#kam1_status")}],t=$("#update_time"),a=getData("/api/status");if("maintenance"===a.error)for(let t of e)t.elem.removeClass("bg-secondary bg-danger bg-success bg-warning").addClass("bg-secondary"),t.elem.html("тех. работы");if(a.error)return console.error(a.error);if(a.market&&a.auth&&a.k1&&a.v1&&a.m1&&a.kam1&&a.time){t.html(new Date(a.time).toLocaleString());for(let t of e)t.elem.removeClass("bg-secondary bg-danger bg-success bg-warning").addClass(-1===a[t.name]?"bg-danger":a[t.name]>100?"bg-warning":"bg-success"),t.elem.html(-1===a[t.name]?"down":a[t.name].toFixed(2)+"ms")}}document.addEventListener("DOMContentLoaded",(function(e){var t=createDayChart("chart");updChart(t,$("#select_data").find(":selected").val()),updateStatus(),updateNews(),$("#select_data").on("change",(function(){updChart(t,this.value)}));setInterval((function(){updateStatus(),updChart(t,$("#select_data").find(":selected").val())}),1e4)}));
</script>
